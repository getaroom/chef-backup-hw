Backup::Model.new(:<%= @backup_model %>, 'Backups for <%= @databases %>') do
  split_into_chunks_of <%= @split_into_chunks_of %>
  <% @databases.each do |db| %>
  database <%= db %>
  <% end %>
  <% if @gpg_public_key %>
  encrypt_with GPG
  <% end %>
  compress_with Gzip
  store_with S3
  notify_by Campfire
end
